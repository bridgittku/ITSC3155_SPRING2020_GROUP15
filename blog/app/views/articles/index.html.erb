    <th><%="Author"%></th>

  </tr>
 
  <% @articles.each do |article| %>
    <tr>
      <td><%= article.title %></td>
      <td><%= article.text %></td>
      <td><% if article.user %>
            <%= article.user.name %>
          <% end %>
      </td>
      <td><%= link_to 'Show', article_path(article) %></td>
      <td><%= link_to 'Edit', edit_article_path(article) %></td>
      <td class="destroy_button"><%= link_to 'Destroy', 
                                article_path(article), 
                                method: :delete,
                                data: {confirm: 'Are you sure?'}%></td>
    </tr>
  <% end %>
</table>`

